<div class="page-header">
  <%= link_to new_carrera_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Carrera
  <% end %>
  <h1>Lista de carreras</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @carreras) do |carrera| %>
            <td><%= carrera.nombre %></td>
            <td><%= link_to 'Ver', carrera %></td>
        <td><%= link_to 'Editar', edit_carrera_path(carrera) %></td>
        <td><%= link_to 'Borrar', carrera, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
