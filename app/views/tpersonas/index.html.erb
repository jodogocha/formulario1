<div class="page-header">
  <%= link_to new_tpersona_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Tipo de persona
  <% end %>
  <h1>Listar Tipos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Tipo de persona</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tpersonas) do |tpersona| %>
            <td><%= tpersona.tipo %></td>
            <td><%= link_to 'Ver', tpersona %></td>
        <td><%= link_to 'Editar', edit_tpersona_path(tpersona) %></td>
        <td><%= link_to 'Borrar', tpersona, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
